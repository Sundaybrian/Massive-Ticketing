{
    "$schema": "http://json-schema.org/draft-07/schema",
    "type": "object",
    "title": "Ticket History",
    "description": "The Ticket History",
    "required": ["assigned_staff_id", "status_id", "ticket_id"],
    "additionalProperties": false,
    "properties": {
        "id": {
            "$id": "#/properties/id",
            "type": "integer",
            "title": "The database ID of the ticket history."
        },
        "assigned_staff_id": {
            "$id": "#/properties/assigned_staff_id",
            "type": "number",
            "title": "The id of the staff handling the ticket."
        },
        "ticket_id": {
            "$id": "#/properties/ticket_id",
            "type": "number",
            "title": "The id of the ticket."
        },
        "comment": {
            "$id": "#/properties/comment",
            "type": "string",
            "title": "The comment.",
            "examples": ["some short desc of the action taken by the agent"]
        },

        "created_at": {
            "$id": "#/properties/created_at",
            "type": "string",
            "title": "The creation date when the ticket was created."
        },
        "updated_at": {
            "$id": "#/properties/updated_at",
            "type": "string",
            "title": "The date when the ticket was updated."
        }
    }
}
